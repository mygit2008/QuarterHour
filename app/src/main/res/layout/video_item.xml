<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20px"
    android:orientation="vertical"
    android:padding="10px">

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/sjj"
        android:layout_width="match_parent"
        android:layout_height="120px">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/rc_img"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_marginLeft="10px"
            fresco:placeholderImage="@mipmap/raw_1499936862"
            fresco:roundAsCircle="true"
            fresco:roundedCornerRadius="90px" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="120px"
            android:layout_marginLeft="10px"
            android:layout_toRightOf="@+id/rc_img"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rc_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:text="妞妞喝奶" />

            <TextView
                android:id="@+id/rc_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:text="2017-06-21 14:35"
                android:textColor="@android:color/holo_red_dark" />

        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/xihuan"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="35px"
            android:layout_marginTop="30px"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/img1"
                android:layout_width="50px"
                android:layout_height="50px"
                android:src="@mipmap/xihuan" />

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="753" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/fenxiang"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="35px"
            android:layout_marginTop="30px"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/img2"
                android:layout_width="50px"
                android:layout_height="50px"
                android:src="@mipmap/fenxiang" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="537" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/xiaoxi"
            android:layout_width="80px"
            android:layout_height="80px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="35px"
            android:layout_marginTop="30px"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/img3"
                android:layout_width="50px"
                android:layout_height="50px"
                android:src="@mipmap/xiaoxi" />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="555" />
        </com.zhy.autolayout.AutoLinearLayout>

        <ImageView
            android:id="@+id/img_jia"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20px"
            android:layout_marginTop="15px"
            android:src="@mipmap/jiahao" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <TextView
        android:id="@+id/tjPb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sjj"
        android:layout_marginLeft="10px"
        android:layout_marginTop="20px"
        android:text="天气美美的适合郊游"
        android:textColor="@android:color/black"
        android:textSize="34px" />


    <fm.jiecao.jcvideoplayer_lib.JCVideoPlayer
        android:id="@+id/videoplayer"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/tjPb"></fm.jiecao.jcvideoplayer_lib.JCVideoPlayer>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/videoplayer"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="15px"
        android:layout_marginRight="20px"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_below="@+id/tjPb">

        <example.com.quarterhour.widget.PraiseView
            android:id="@+id/heart_layout"
            android:layout_width="100px"
            android:layout_height="100px">

        </example.com.quarterhour.widget.PraiseView>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/member_send_good"
                android:layout_width="60px"
                android:layout_height="60px"
                android:background="@mipmap/xinxingk" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1561"
                android:textColor="#aea9a9" />

        </com.zhy.autolayout.AutoLinearLayout>


        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/member_send_xing"
                android:layout_width="60px"
                android:layout_height="60px"
                android:background="@mipmap/wujiaoxingk" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="644"
                android:textColor="#aea9a9" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:orientation="vertical">

            <ImageView
                android:layout_width="60px"
                android:layout_height="60px"
                android:background="@mipmap/fenxiangk" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1561"
                android:textColor="#aea9a9" />

        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/member_send_feixiang"
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_gravity="center_horizontal"
                android:background="@mipmap/xiaoxik"
                android:button="@null"
                android:checked="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1235"
                android:textColor="#aea9a9" />
        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoRelativeLayout>